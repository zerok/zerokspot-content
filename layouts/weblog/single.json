{
    "objectID": "{{ .RelPermalink }}",
    "type": "weblog",
    "title": {{ .Title|jsonify }},
    "file": "{{ .File.Path }}",
    "url": "{{ .Permalink }}",
    "date": {{ .Date.Unix }},
    "date_year": {{ .Date.Year }},
    "tags": [
        {{ with $tags := .Params.tags -}}
        {{ with $lastIdx := (add (len $tags) -1) -}}
        {{ range $idx, $el := $tags -}}
        "{{ $el }}"{{ if lt $idx $lastIdx }},{{ end }}
        {{- end }}
        {{- end }}
        {{- end }}
    ],
    "content": {{ (.Content|plainify|truncate 1000) |jsonify }}
}
